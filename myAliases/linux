

	#### directorios
projects="$HOME/projects"
cursos="$projects/cursos"
angular="$cursos/angular2"
restaurantes="$angular/appRestaurantes"
	### apache
alias htdocs="cd /opt/lampp/htdocs"


	#### alias

alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'
alias actualizar='update && upgrade && sudo apt-get dist-upgrade -y'
alias instalar='sudo apt-get install'

alias proj="cd $projects"
alias cursos="cd $cursos"
alias angular="cd $angular"
alias restaurantes="cd $restaurantes"
alias we="cd $projects/trabajos/weconoceteatimismo.com"
alias laravel="cd $projects/laravel"
alias homestead="cd ~/Homestead/"
alias homesteadup="cd ~/Homestead/ && vagrant up"
alias homesteadhalt="cd ~/Homestead/ && vagrant halt"
alias homesteadssh="cd ~/Homestead/ && vagrant ssh"
alias homesteadprov="cd ~/Homestead/ && vagrant provision"

### alias ejecucion programas
			
 	### LAMP
alias lamp="sudo /opt/lampp/lampp"
alias lmpstart="sudo /opt/lampp/lampp start"
alias lmprestart="sudo /opt/lampp/lampp restart"
alias lmpstop="sudo /opt/lampp/lampp stop"




##### edicion archivos

alias hosts="sudo nano /etc/hosts"


##### conexions ssh

alias pi="ssh pi@192.168.1.120"