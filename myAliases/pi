
#### alias ####

	#### directories
alias bkpdir="cd ~/Backups/"
alias bkpdirpi="cd ~/Backups/pi"


	##### apache
alias www="cd /var/www/html/"
alias apa="cd /etc/apache2/"
alias apaen="cd /etc/apache2/sites-enabled/"
alias apaav="cd /etc/apache2/sites-available/"

alias apasta="sudo service apache2 start"
alias apasto="sudo service apache2 stop"
alias apasrsta="sudo service apache2 restart"
alias apastatus="sudo service apache2 status"

	#### edit files

alias apaconf="sudo nano /etc/apache2/apache2.conf"

	#### services
	# network
alias networkmon="sudo iftop -P"